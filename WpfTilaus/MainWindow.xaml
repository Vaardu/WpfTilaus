        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="148" Margin="284,10,0,0" VerticalAlignment="Top" Width="484"/>
        <TextBox x:Name="txtTilausnumero" HorizontalAlignment="Left" Height="30" Margin="114,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="141"/>
        <Label x:Name="lblTilausnumero" Content="Tilausnumero" HorizontalAlignment="Left" Height="30" Margin="20,20,0,0" VerticalAlignment="Top" Width="89"/>
        <TextBox x:Name="txtAsiakasnumero" HorizontalAlignment="Left" Height="30" Margin="114,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="141"/>
        <Label x:Name="lblAsiakasnumero" Content="Asiakasnro" HorizontalAlignment="Left" Height="30" Margin="20,50,0,0" VerticalAlignment="Top" Width="89"/>
